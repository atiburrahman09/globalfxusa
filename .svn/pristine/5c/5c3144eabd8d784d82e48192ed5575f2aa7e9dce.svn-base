                                <div class="col-sm-6">
                                    <div class="row">
                                        <div class="span4">
                                            User ID:
                                        </div>
                                        <div class="span8">
                                            <asp:Label ID="userIdLabel" runat="server" CssClass="infoLabel" Text=""></asp:Label>
