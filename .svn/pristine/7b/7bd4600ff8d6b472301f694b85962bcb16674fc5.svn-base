                db.AddParameters("@CreatedBy", LumexSessionManager.Get("ActiveUserId"));
                db.AddParameters("@CreatedFrom", LumexLibraryManager.GetTerminal());
                db.ExecuteDataTable("[UPDATE_STAKE_INFO]", true);

            }
            catch (Exception)
            {

                throw;
            }
        }

